{
    "concurrent": false,
    "linters": {
        "*.css": [
            "stylelint --fix",
            "git add"
        ],
        "*.scss": [
            "stylelint --syntax=scss --fix",
            "git add"
        ],
        "*.{js,jsx}": [
            "eslint --fix",
            "git add"
        ],
        "*.{js,jsx,css,scss}": [
            "prettier --write",
            "git add"
        ]
    }
}
